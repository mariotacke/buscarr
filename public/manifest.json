{
  "manifest_version": 2,
  "name": "Buscarr",
  "author": "Mario Tacke",
  "version": "1.0.0",
  "description": "Â¡Buscarr!",
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.rottentomatoes.com/m/*"],
      "js": ["static/js/runtime~content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "content_security_policy": "script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'"
}
